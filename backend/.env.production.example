# PRECIVOX - CONFIGURAÇÃO DE PRODUÇÃO
# =====================================

# ✅ AMBIENTE
NODE_ENV=production
PORT=3001

# ✅ SEGURANÇA JWT - GERAR CHAVES ALEATÓRIAS EM PRODUÇÃO
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=seu_access_secret_de_64_bytes_aqui
JWT_REFRESH_SECRET=seu_refresh_secret_de_64_bytes_aqui
JWT_RESET_SECRET=seu_reset_secret_de_64_bytes_aqui

# ✅ TEMPOS DE EXPIRAÇÃO JWT
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d
JWT_RESET_EXPIRES=1h

# ✅ BANCO DE DADOS POSTGRESQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=precivox_production
DB_USER=precivox_user
DB_PASSWORD=sua_senha_segura_aqui
DB_SSL=true
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ✅ REDIS (RECOMENDADO PARA CACHE E SESSÕES)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=sua_senha_redis_aqui
REDIS_DB=0

# ✅ SEGURANÇA GERAL
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5
SESSION_TIMEOUT=86400000

# ✅ CORS - DOMÍNIOS PERMITIDOS
ALLOWED_ORIGINS=https://precivox.com.br,https://www.precivox.com.br
FRONTEND_URL=https://precivox.com.br

# ✅ LOGS E MONITORAMENTO
LOG_LEVEL=info
LOG_FILE=./logs/precivox.log
ENABLE_ACCESS_LOGS=true
SENTRY_DSN=sua_url_sentry_aqui

# ✅ APIS EXTERNAS
UNSPLASH_ACCESS_KEY=sua_chave_unsplash_aqui
GOOGLE_MAPS_API_KEY=sua_chave_google_maps_aqui
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@precivox.com.br
SMTP_PASS=sua_senha_email_aqui

# ✅ UPLOADS E STORAGE
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
STORAGE_TYPE=local
AWS_BUCKET=precivox-uploads
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=sua_chave_aws_aqui
AWS_SECRET_ACCESS_KEY=sua_chave_secreta_aws_aqui

# ✅ CACHE
CACHE_TTL=3600
CACHE_MAX_SIZE=100
ENABLE_QUERY_CACHE=true

# ✅ FEATURES FLAGS
ENABLE_AI_ANALYSIS=true
ENABLE_GEOLOCATION=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# ✅ MONITORAMENTO E ALERTAS
HEALTH_CHECK_INTERVAL=60000
ALERT_EMAIL=admin@precivox.com.br
SLACK_WEBHOOK_URL=sua_url_slack_webhook_aqui

# ✅ BACKUPS
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=precivox-backups